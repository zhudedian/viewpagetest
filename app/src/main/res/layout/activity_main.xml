<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/jj"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.zdd.viewpagerindicator.drop.DropViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/circleIndicator"
        android:layout_alignParentTop="true">
    </com.zdd.viewpagerindicator.drop.DropViewPager>

    <com.zdd.viewpagerindicator.drop.DropIndicator
        android:id="@+id/circleIndicator"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        app:circle_color="#00ffffff"
        app:click_color="#fafafa"
        app:color1="#00ffffff"
        app:color2="#00ffffff"
        app:color3="#00ffffff"
        app:color4="#00ffffff"
        app:duration="800"
        app:radius="15dp"
        app:scale="1">

        <com.zdd.viewpagerindicator.BottomMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="1"/>
        <com.zdd.viewpagerindicator.BottomMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="2"/>
        <com.zdd.viewpagerindicator.BottomMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="3"/>
        <com.zdd.viewpagerindicator.BottomMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="4"/>

    </com.zdd.viewpagerindicator.drop.DropIndicator>

</RelativeLayout>
